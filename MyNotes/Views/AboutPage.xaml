<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MyNotes.ViewModels"
             x:Class="MyNotes.Views.AboutPage">
    <ContentPage.BindingContext>
        <viewmodels:AboutPageViewModel/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="appicon.jpg"
                   HeightRequest="64"/>
            <Label FontSize="22" FontAttributes="Bold" Text="{Binding Title}" VerticalOptions="End"/>
            <Label FontSize="22" Text="{Binding Version}" VerticalOptions="End"/>
        </HorizontalStackLayout>
        <Label Text="This app is written in XAML and C# with .NET MAUI."/>
        <Button Text="About maui..."
                Command="{Binding OpenWebsiteAsyncCommand}"
                CommandParameter="https://aka.ms/maui"/>
        <Button Text="This app on github..."
                Command="{Binding OpenWebsiteAsyncCommand}"
                CommandParameter="https://github.com/fomgleb/my-notes"/>
    </VerticalStackLayout>
</ContentPage>